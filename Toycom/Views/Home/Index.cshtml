<div class="row">
    @foreach(var produtos in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@produtos.ImageUrl" class="card-img-top" alt="@produtos.Nome" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@produtos.Nome</h5>
                    <p class="card-text">@produtos.Descricao</p>
                    <p class="card-text"><strong>Preço: R$ @produtos.Preco.ToString("F2")</strong></p>
                    <p class="card-text"><small class="text-muted">Estoque: @produtos.Estoque</small></p>

                    <form asp-controller="Carrinho" asp-action="AdicionarCarrinho" method="post">
                        <input type="hidden" name="produtosId" value="@produtos.Id" />
                        <div class="form-group mb-2">
                            <label for="quantidade-@produtos.Id">Quantidade:</label>
                            <input type="number" id="quantidade-@produtos.Id" name="quantidade" class="form-control" value="1" min="1" max="@produtos.Estoque" />
                        </div>
                        <button type="submit" class="btn btn-primary">Adicionar ao Carrinho</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>