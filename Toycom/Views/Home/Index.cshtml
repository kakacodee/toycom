@{
    ViewData["Title"] = "Home Page";
@model IEnumerable<Toycom.Models.Produtos>

}
<div class="text-center">
    <h1 class="display-4">Nossos Produtos</h1>
</div>

<div class="row">
    @foreach (var produto in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@produto.ImageUrl" class="card-img-top" alt="@produto.Nome" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title" style="color:darkgreen">@produto.Nome</h5>
                    <p class="card-text" style="color:darkseagreen">@produto.Descricao</p>
                    <p class="card-text"><strong>Preço: R$ @produto.Preco.ToString("F2")</strong></p>
                    <p class="card-text" style="font-size:20px;"><small class="text-muted">Estoque: @produto.Estoque.ToString()</small></p>

                    <form asp-controller="Carrinho" asp-action="AdicionarCarrinho" method="post">
                        <input type="hidden" name="produtoId" value="@produto.Id" />
                        <div class="form-group mb-2">
                            <label for="quantidade-@produto.Id">Quantidade:</label>
                            <input type="number" id="quantidade-@produto.Id" name="quantidade" class="form-control" value="1" min="1" max="@produto.Estoque" />
                        </div>
                        <button type="submit" class="btn btn-primary">Adicionar ao Carrinho</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>